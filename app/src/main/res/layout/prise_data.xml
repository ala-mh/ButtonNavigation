<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/item_today"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:src="@drawable/med" />

    <TextView
        android:id="@+id/medicamentView"
        android:layout_width="0dp"
        android:layout_weight ="0.6"
        android:layout_height="70dp"
        android:textColor="#673AB7"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight ="0.2"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/item_date"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_today_black_24dp"
            android:tint="@color/colorPrimary"
            />
        <ImageView
            android:id="@+id/item_h"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_access_time_black_24dp"
            android:tint="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight ="0.5"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/DatePriseView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="#6200EE"
            android:textSize="15sp"
            android:layout_marginStart="5dp" />
        <TextView
            android:id="@+id/heureView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="#6200EE"
            android:textSize="15sp"
            android:layout_marginStart="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight ="0.2"
        android:layout_height="70dp"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/item_qt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/qt"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight ="0.2"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/qtView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="#6200EE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/item_info1"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:src="@android:drawable/checkbox_on_background" />

</LinearLayout>